{
	"builders": [
		{
			"name": "samuraiwtf-vmx",
      		"type": "vmware-vmx",
      		"source_path": "base-vm/vmware/ubuntu-16.04.2-desktop.vmx",
  			"ssh_username": "samurai",
    		"ssh_password": "samurai",
    		"ssh_pty": true,
    		"shutdown_command": "echo 'samurai' | sudo -S shutdown -P now"
      	}
	],
	"provisioners":[
		{	
			"type": "shell",
			"inline": [
				"echo 'Napping for 10 seconds...'",
				"sleep 10",
				"echo 'samurai' | sudo -S mkdir /tmp/samuraiwtf",
				"echo 'samurai' | sudo -S chown samurai /tmp/samuraiwtf",
				"echo 'samurai' | sudo -S chmod 744 /tmp/samuraiwtf"
			]
		},
		{
			"type": "file",
			"source": "../samuraiwtf-deb/etc",
			"destination": "/tmp/samuraiwtf"
		},
		{
			"type": "file",
			"source": "../samuraiwtf-deb/opt",
			"destination": "/tmp/samuraiwtf"
		},
		{
			"type": "file",
			"source": "../samuraiwtf-deb/usr",
			"destination": "/tmp/samuraiwtf"
		},
		{
			"type": "file",
			"source": "../samuraiwtf-deb/var",
			"destination": "/tmp/samuraiwtf"
		},
		{
			"type": "shell",
			"script": "ubuntu_16_init.sh",
			"environment_vars": ["DEBIAN_FRONTEND=noninteractive"],
			"execute_command": "echo 'samurai' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
		}
	],
	"post-processors": [


	]
}